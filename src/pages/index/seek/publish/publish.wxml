<form>
	<view class="cu-form-group margin-top">
		<view class="title">标题</view>
		<input placeholder="输入简要描述"></input>
	</view>

	<view class="cu-form-group align-start">
		<view class="title">描述</view>
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="可以更仔细的描述一下啦"></textarea>
	</view>
	<view class="cu-form-group">
		<view class="title">地点</view>
		<picker mode="multiSelector" bindchange="MultiChange" bindcolumnchange="MultiColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
			<view class="picker">
				{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="title">类型</view>
		寻物<switch class="orange radius sm" checked></switch>招领
	</view>
	<view class="cu-form-group">
		<view class="title">联系方式</view>
		<input placeholder="联系方式"></input>
	</view>

	<view class="cu-bar bg-white margin-top">
		<view class="action">
			图片上传
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="index" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>
</form>